{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react-native",
        "lib": [
            "es6",
            "esnext.asynciterable"
        ],
        "strict": true,
        "esModuleInterop": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "*"
            ]
        }
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}